{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended"
    ],

    "env": {
        "es6": true,
        "node": true
    },

    "plugins": [
        "jsdoc"
    ],

    "settings": {
        "jsdoc": {
            "mode": "typescript"
        }
    },

    "globals": {
        "RED": true
    },

    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "jsdoc/require-hyphen-before-param-description": 1,
        "jsdoc/tag-lines": ["error", "any", {
            "startLines":1
        }]
    }
}
